{
  "name": "webpush-scheduler",
  "type": "module",
  "scripts": {
    "setup": "npm ci && node scripts/setup.ts",
    "start": "node --env-file .env src/main.ts",
    "dev": "node --env-file .env --watch src/main.ts",
    "test:jsonStore": "node --test tests/jsonStore/**/*.test.ts",
    "test:e2e": "node --test tests/e2e/**/*.test.ts",
    "test:docker": "bash ./test-docker.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^24.6.2"
  },
  "engines": {
    "node": ">= 22.18.0"
  }
}